<?xml version='1.0' encoding='utf-8'?>
<Sg>
<!-- Sg Configuration File -->
<!-- name: name of the widget or the resource -->
<!-- SgBMP{n}: n static SgBMP resources -->
<!-- w: width of the widget  -->
<!-- h: height of the widget -->
<!-- This SgBMP(x,y) center point is use for rotation -->	
<!-- refresh: it is a function called if this widget is in display -->	
<SgWidget 
	name     = 'WatchBackground'	
	type     = 'SgBMP{1}' 			
	x        = '0'
	y        = '80'
	w        = '320'	
	h        = '320'				
	layer    = '0'
	refresh  = 'NULL'
	>
	<SgBMP 
		name   = 'WatchBackground' 
		locate = 'watch_bg.png' 
		x      = '160' 				
		y      = '160'  					
		/>
</SgWidget>

<SgWidget 
	name     = 'PointerHour'
	type     = 'SgBMP{1}' 
	x        = '160'
	y        = '240'
	w        = '109'
	h        = '14'	
	layer    = '1'
	refresh  = 'RefreshPointerHour'	
	>
	<SgBMP 
		name='PointerHour' 
		locate='watch_pointer_hour.png' 
		x='27' 
		y='7' 
		/>
</SgWidget>

<SgWidget 
	name     = 'PointerMinute'
	type     = 'SgBMP{1}' 
	x        = '160'
	y        = '240'	
	w        = '136'
	h        = '12'		
	layer    = '2'
	refresh  = 'RefreshPointerMinute'		
	>
	<SgBMP 
		name='PointerMinute' 
		locate='watch_pointer_minute.png' 
		x='25'
		y='6' 
		/>
</SgWidget>

<SgWidget 
	name     = 'PointerSecond'
	type     = 'SgBMP{1}' 
	x        = '160'
	y        = '240'
	w        = '149'
	h        = '15'			
	layer    = '3'
	refresh  = 'RefresPointerSecond'
	>
	<SgBMP 
		name='PointerSecond' 
		locate='watch_pointer_second.png' 
		x='45' 
		y='7' 
		/>
</SgWidget>

</Sg>	

