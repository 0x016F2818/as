import os

cwd = os.path.abspath(os.curdir)

Import('asenv')
Import('arch')

asenv.Append(CCFLAGS=' -I%s/include '%(cwd))
asenv.Append(CCFLAGS=' -I%s/kernel '%(cwd))
asenv.Append(CCFLAGS=' -I%s/portable/%s '%(cwd,arch))

objs = []

objs += Glob('kernel/*.c')
objs += Glob('portable/%s/*.c'%(arch))
objs += Glob('portable/%s/*.S'%(arch))

Return('objs')